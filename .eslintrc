{
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions":
  {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules":
  {
    "linebreak-style": 0,
    "no-dupe-class-members": 0, 
    "no-console": "off",
    "comma-dangle":
    [
      "error",
      {
        "functions": "never"
      }
    ],

    "max-len":
    [
      "warn",
      {"ignoreComments" : true},
      {"code": 250}
    ],

    "require-jsdoc":
    [
      "error", {
        "require": {
          "FunctionDeclaration": false
        }
      }
    ],

    "camelcase":
    [
      "warn",
      {"properties": "always"}
    ],

    "new-cap":
    [
      "warn", {"newIsCap": true}
    ],

    "no-multiple-empty-lines":
    [
      "warn",
      {
        "max": 4
      }
    ],

    "no-trailing-spaces":
      [
        "error", {"skipBlankLines": true}
      ],

    "no-unused-vars": "warn",

    "no-undef": "error"
  }
}
